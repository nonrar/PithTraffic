<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="th.or.plastics.arnon.pithtraffic.DetailActivity"
    android:background="@drawable/bg7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtDetailTitle"
        android:textSize="@dimen/h1"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorText" />

    <ImageView
        android:layout_width="@dimen/image"
        android:layout_height="@dimen/image"
        android:id="@+id/imvDetailImage"
        android:layout_below="@+id/txtDetailTitle"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="@dimen/image"
        android:layout_height="150dp"
        android:id="@+id/scrollView"
        android:layout_below="@+id/imvDetailImage"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:background="#78ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/txtDetail"
            android:textSize="@dimen/h2"
            android:textColor="@color/colorText" />
    </ScrollView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:onClick="clickBack"
            android:id="@+id/button2"
            android:layout_weight="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXERCISE"
            android:onClick="clickExercise"
            android:id="@+id/button3"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>
